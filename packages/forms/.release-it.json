{
  "git": {
    "commitMessage": "chore(forms): release v${version}",
    "tagName": "forms-v${version}",
    "requireUpstream": false,
    "push": true,
    "tag": true,
    "tagAnnotation": "Release forms v${version}",
    "requireCleanWorkingDir": true
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "before:init": ["pnpm build"],
    "after:bump": "echo 'Successfully released forms v${version}'"
  },
  "plugins": {
